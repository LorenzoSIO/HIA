<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/item">

    <ImageView
        android:id="@+id/item_absence_status_icon"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:src="@drawable/ic_hourglass"
        android:padding="@dimen/dp12"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/item_absence_status_icon"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/item_absence_planned_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp8"
            android:textSize="@dimen/dp20"
            android:textStyle="bold"
            android:text="Pour le 28.08.2019"/>

        <TextView
            android:id="@+id/item_absence_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp8"
            android:textSize="@dimen/dp16"
            android:text="ProposÃ© le 20.01.19"
            android:layout_below="@id/item_absence_planned_date"
            android:layout_alignLeft="@id/item_absence_planned_date"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_meeting_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dp24"/>

</RelativeLayout>