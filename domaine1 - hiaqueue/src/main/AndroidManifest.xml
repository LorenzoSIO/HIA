<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.lorenzocacciato.hia">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launch"
            android:label="@string/common_app_name"
            android:roundIcon="@mipmap/ic_launch_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".ui.HomeActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="fr.lorenzocacciato.hiaqueue.ui.doctor.meetinglist.DoctorMeetingPanelActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="fr.lorenzocacciato.hiaqueue.ui.doctor.meetinglist.DoctorMeetingCalendarActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name="fr.lorenzocacciato.hiaqueue.ui.patient.MeetingFormActivity"
                android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>